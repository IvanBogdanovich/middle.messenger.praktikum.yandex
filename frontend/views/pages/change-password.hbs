---
meta:
    description: Страница изменения пароля
    title: Change password

styles: ./../../styles/pages/change-password.css
scripts: ./../../scripts/pages/change-password.js

fields:
    - form-profile-field:
        label: Старый пароль
        inputID: oldPassword
        inputName: oldPassword
        inputValue: qweqwe
        inputType: password
    - form-profile-field:
        label: Новый пароль
        inputID: newPassword
        inputName: newPassword
        inputValue: qweqwe1
        inputType: password
    - form-profile-field:
        label: Повторите новый пароль
        inputID: repeatNewPassword
        inputName: repeatNewPassword
        inputValue: qweqwe1
        inputType: password

link:
    url: '/views/pages/chats.hbs'
    value: Выйти
    link-mod-color: link-color--red
    link-mod-size: link-size--medium-xxxs
    link-mod-position: link-position--left
---

{{#extend "common"}}
{{#content "main"}}
<main class="main">
    <section class="grid">
        <h1 hidden>Страница изменения пароля</h1>
        <div class="row">
            <div class="col col-xs-1">
                <aside
                    class="sidebar js-sidebar-collapse"
                    id="sidebar"
                >
                    <a
                        href="/views/pages/chats.hbs"
                        class="sidebar__link"
                    >
                        <div class="sidebar__link-wrap">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 12H4"></path><path d="M10 18l-6-6 6-6"></path>
                            </svg>
                        </div>
                    </a>
                </aside>
            </div>

            <div class="col col-xs-11">
                <div class="grid">
                    <div class="row row--justify-center">
                        <div class="col col-xs-6">
                            <form class="form-profile">
                                <legend class="form-profile__legend">Смена пароля</legend>
                                    {{>file-upload}}

                                    <ul class="form-profile__list">
                                        {{#each fields}}
                                            <li class="form-profile__item">
                                                {{>form-profile-field}}
                                            </li>
                                        {{/each}}
                                    </ul>

                                    {{>link}}
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{{/content}}
{{/extend}}
